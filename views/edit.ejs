<%- include ("partials/header.ejs")%>
<div class="heading ui main text container segment margine" >
	
	<div class="ui huge header">
		 Edit Post!
	</div>
	<form class="ui form" action="/blogs/<%=blogs._id%>?_method=PUT" method="POST">
		<div class="field">
			<label> Title</label>
			<input type="text" name="blogs[title]" value="<%=blogs.title%>">
		</div>
		<div class="field">
			<label> Image</label>
		<input type="text" name="blogs[image]" value="<%=blogs.image%>">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blogs[body]"><%=blogs.body%> </textarea>
		</div>
<button class="fluid ui inverted purple button">Submit!</button>
	</form>
</div>




