<%- include ("partials/header.ejs")%>
<div class=" heading ui main text container segment margine" >
	<div class="ui huge header">
		<%=blogs.title%>
	</div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src="<%=blogs.image%>">
			<div class="ui right floated content ">
               <%=blogs.created.toDateString()%>
			</div><br><br>
			<p>
				<%-blogs.body%>
			</p>
          
		</div>
		
	</div>
	<a href="/blogs/<%=blogs._id%>/edit" class=" ui orange button ">EDIT </a>
	<form id="delete" action="/blogs/<%=blogs._id%>?_method=DELETE" method="POST">
		<button class="ui red button">
			DELETE
		</button>
	</form>
</div>


<%- include ("partials/footer.ejs")%>